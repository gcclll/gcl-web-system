{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Vue Web",
  "extends": "./base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["es2015", "dom"],
    "module": "esnext",
    "target": "es6",
    "jsx": "preserve",
    "composite": true,
    "types": ["node"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "references": [
    {
      "path": "./references/vue.config.json"
    },
    {
      "path": "./references/vue.app.json"
    },
    {
      "path": "./references/vue.vitest.json"
    }
  ]
}
